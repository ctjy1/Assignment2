@page
@model Assignment2.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<h2>@ViewData["Title"]</h2>
<p>Please enter your new password below.</p>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PasswordReset.Token" />
    <div class="form-group">
        <label asp-for="PasswordReset.Email"></label>
        <input asp-for="PasswordReset.Email" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="PasswordReset.NewPassword"></label>
        <input asp-for="PasswordReset.NewPassword" class="form-control" type="password" />
        <span asp-validation-for="PasswordReset.NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordReset.ConfirmPassword"></label>
        <input asp-for="PasswordReset.ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="PasswordReset.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Reset Password</button>
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
