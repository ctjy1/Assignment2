@model Assignment2.Pages.Error.error404Model
@{
    ViewData["title"] = "Page Not Found";
}

<div class="error-container">
    <div class="error-header">
        <h1>404</h1>
        <p>Page Not Found</p>
    </div>
    <div class="error-message">
        <p>The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
        <p>Please check the URL for spelling errors or go to the <a href="https://localhost:7175/Home">Home page</a>.</p>
    </div>
    <div class="error-link">
        <p>Return to <a href="https://localhost:7087/Home">Home</a></p>
    </div>
</div>
