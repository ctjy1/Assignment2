@page "{id?}"
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error @Model.StatusCode</h1>

@if (Model.StatusCode == 404)
{
    <h2 class="text-danger">Page not found.</h2>
}
else if (Model.StatusCode == 403)
{
    <h2 class="text-danger">Access forbidden.</h2>
}
else
{
    <h2 class="text-danger">An error occurred while processing your request.</h2>
}

@if (Model.ShowRequestId)
{
    <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
}
